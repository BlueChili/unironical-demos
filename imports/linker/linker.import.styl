// Linker app styles
.lss
  margin 0.5em
  max-width 30em
  padding-right 0.7em
  border 1px solid $greenMint
  @media all and (min-width: 501px)
    margin 0.5em auto

.lss-inputFields
  border 0px
  display flex
  flex-flow column

.lss-inputLabels
  font-size 1.3em

.lss-inputName, .lss-inputUrl
  font-size 1em
  width 100%

.lss-inputUrl
  transition background 0.4s

.lss-inputUrl:invalid
  background rgba(255,45,85, 0.4)
  // outline $iOS-red


.js-site-add
  font-size 1.5em
  height 30px
  box-sizing border-box
  padding 0 1em 0.1em
  margin 0.5em 0.6em
  color white
  background $greenMint
  border 0px

.js-site-submit
  font-size 1.5em
  height 30px
  box-sizing border-box
  padding-top 1px
  padding-bottom 4px
  margin-top 0.5em
  color white
  background $greenMint
  border 0px
  float right
  font-weight 300
